<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_hero"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#1F2E40"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHero"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

       <TextView
           android:id="@+id/txtProBItem"
           android:layout_width="60dp"
           android:layout_height="wrap_content"
           android:text="26.9"
           android:textColor="#DCDEE1"
           android:textSize="12sp"
           android:padding="10dp"
           android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtProPickItem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="14.6"
            android:textColor="#DCDEE1"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtProBanItem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="12.3"
            android:textColor="#DCDEE1"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtProWinItem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="47.9"
            android:textColor="#DCDEE1"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>