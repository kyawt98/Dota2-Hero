<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_hero"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#1F2E40"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgTeam"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtPlayerNameValue"
            android:layout_width="60dp"
            android:textSize="11sp"
            android:textColor="#4DA1F4"
            android:text="KKS"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtLvLValue"
            android:layout_width="50dp"
            android:textSize="11sp"
            android:textColor="#4DA1F4"
            android:text="23"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtKValue"
            android:layout_width="50dp"
            android:textSize="11sp"
            android:textColor="#76AD73"
            android:text="2"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtDValue"
            android:layout_width="50dp"
            android:textSize="11sp"
            android:textColor="#A84A4E"
            android:text="3"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtAValue"
            android:layout_width="50dp"
            android:textSize="11sp"
            android:textColor="#36424E"
            android:text="3"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>