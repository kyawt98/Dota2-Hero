<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_hero"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#1F2E40"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRankItem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="1st"
            android:textColor="#656A83"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imgTeam"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtNameItem"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="OG"
            android:textStyle="bold"
            android:textColor="#274A75"
            android:textSize="13sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtWinItem"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="525"
            android:textColor="#63974F"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtLossesItem"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="#D14445"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLastPlayItem"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="3 min ago"
            android:textColor="#656A83"
            android:textSize="10sp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>