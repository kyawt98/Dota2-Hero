<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_hero"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#1F2E40"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMatchIDItem"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#0A68F8"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtDurationItem"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="37:41"
            android:textColor="#DCDEE1"
            android:textSize="11sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtRadiantItem"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Virtus Pro"
            android:textColor="#63974F"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtDireItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="FlytoMoon"
            android:textColor="#D14445"
            android:textSize="12sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLeagueItem"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Parimatch League Season 2"
            android:textColor="#656A83"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>